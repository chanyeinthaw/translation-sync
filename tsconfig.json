  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src",

    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true
  },
  "files": ["src/main.ts"],
  "exclude": ["node_modules"]
}
